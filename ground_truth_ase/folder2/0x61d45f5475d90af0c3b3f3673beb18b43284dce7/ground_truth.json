[
  {
    "name": "Total Supply Conservation",
    "invariant": "sum(balances.values()) + balances[address(0)] == _totalSupply"
  },
  {
    "name": "Transfer Validity",
    "invariant": "transfer(sender, to, tokens) => balances[sender] >= tokens"
  },
  {
    "name": "TransferFrom Validity",
    "invariant": "transferFrom(from, to, tokens) => balances[from] >= tokens && allowed[from][msg.sender] >= tokens"
  },
  {
    "name": "Approve Sets Allowance",
    "invariant": "approve(spender, tokens) => allowed[msg.sender][spender] == tokens"
  },
  {
    "name": "Allowance Nonnegative",
    "invariant": "allowed[a][b] >= 0 for all a, b"
  },
  {
    "name": "No Negative Balances",
    "invariant": "balances[a] >= 0 for all a"
  },
  {
    "name": "Transfer Emits Event",
    "invariant": "transfer(a, b, x) => emits Transfer(a, b, x)"
  },
  {
    "name": "Approval Emits Event",
    "invariant": "approve(a, x) => emits Approval(msg.sender, a, x)"
  },
  {
    "name": "Initial Supply Assigned to Creator",
    "invariant": "constructor => balances[msg.sender] == _totalSupply"
  },
  {
    "name": "Total Supply Function Matches Internal",
    "invariant": "totalSupply() == _totalSupply - balances[address(0)]"
  }
]

